## Makefile for building the GDK DLL with gcc-2.95 or later on cygwin
## Use: make -f makefile.mingw

## You must first build the Win32-dependent sources in the win32 subdirectory.

## There is no install target, you have to decide where and 
## how to install for yourself.

OPTIMIZE = -O

TOP = ../..

include $(TOP)/glib/build/win32/make.mingw

################################################################

INCLUDES = -I . -I ..
DEFINES = -DG_ENABLE_DEBUG -DHAVE_CONFIG_H -DGDK_COMPILATION -DG_LOG_DOMAIN=\"Gdk\"
DEPCFLAGS = $(GLIB_CFLAGS)

all: \
	../config.h \
	gdkconfig.h \
	libgdk-@LT_CURRENT_MINUS_AGE@.dll \
	testgdk.exe

gdk_OBJECTS = \
	gdk.o		\
	gdkcolor.o	\
	gdkcursor.o	\
	gdkdraw.o	\
	gdkevents.o     \
	gdkfont.o	\
	gdkgc.o		\
	gdkglobals.o	\
	gdkimage.o	\
	gdkrgb.o	\
	gdkrectangle.o	\
	gdkwindow.o

../config.h : ../config.h.win32
	cp ../config.h.win32 ../config.h

gdkconfig.h : gdkconfig.h.win32
	cp gdkconfig.h.win32 gdkconfig.h

libgdk-@LT_CURRENT_MINUS_AGE@.dll : $(gdk_OBJECTS) gdk.def win32/libgdk-win32.a win32/gdk-win32res.o
	$(BUILD_DLL) gdk @LT_CURRENT@:@LT_REVISION@:@LT_AGE@ gdk.def $(gdk_OBJECTS) -L win32 -lgdk-win32 -lwntab32x $(GLIB_LIBS) -lgdi32 -luser32 -limm32 -lshell32 -lole32 -luuid $(LDFLAGS) win32/gdk-win32res.o 

testgdk.exe : testgdk.o libgdk-@LT_CURRENT_MINUS_AGE@.dll
	$(CC) -o $@ testgdk.o -L . -lgdk $(GLIB_LIBS)
